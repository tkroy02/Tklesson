    {
      "number": 1,
      "problem": "A car accelerates from $v_0 = 5\\,\\text{m/s}$ to $v_f = 25\\,\\text{m/s}$ in $10\\,\\text{s}$. Find the acceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use the first equation of motion",
          "explanation": "$v_f = v_0 + at$"
        },
        {
          "step": "Rearrange for $a$",
          "calculation": "$$ a = (v_f - v_0)/t $$"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ a = (25 - 5)/10 = 2\\,\\text{m/s}^2 $$"
        }
      ],
      "final_answer": "The acceleration is $2\\,\\text{m/s}^2$."
    },
