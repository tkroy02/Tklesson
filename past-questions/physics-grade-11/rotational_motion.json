{
  "course": "Physics Grade 11",
  "topic": "Rotational Motion",
  "problems": [
    {
      "number": 1,
      "problem": "A wheel rotates with an angular velocity of $10\\,\\text{rad/s}$. Find the angular displacement after $5\\,\\text{s}$ if it rotates at constant angular velocity.",
      "image": null,
      "step_by_step": [
        {
          "step": "Identify equation",
          "explanation": "$\\theta = \\omega t$ for constant angular velocity"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ \\theta = 10 \\times 5 = 50\\,\\text{rad} $$"
        }
      ],
      "final_answer": "The angular displacement is $50\\,\\text{rad}$."
    },
    {
      "number": 2,
      "problem": "A disc starts from rest and accelerates at $2\\,\\text{rad/s}^2$. Find the angular velocity after $4\\,\\text{s}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Equation of rotational motion",
          "explanation": "$\\omega = \\omega_0 + \\alpha t$"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ \\omega = 0 + 2 \\times 4 = 8\\,\\text{rad/s} $$"
        }
      ],
      "final_answer": "The angular velocity after $4\\,\\text{s}$ is $8\\,\\text{rad/s}$."
    },
    {
      "number": 3,
      "problem": "A wheel has angular acceleration $3\\,\\text{rad/s}^2$ and initial angular velocity $2\\,\\text{rad/s}$. Find angular displacement after $6\\,\\text{s}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Equation",
          "explanation": "$\\theta = \\omega_0 t + \\frac{1}{2} \\alpha t^2$"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ \\theta = 2 \\times 6 + 0.5 \\times 3 \\times 6^2 = 12 + 54 = 66\\,\\text{rad} $$"
        }
      ],
      "final_answer": "The angular displacement is $66\\,\\text{rad}$."
    },
    {
      "number": 4,
      "problem": "A wheel rotates at $12\\,\\text{rad/s}$ and stops in $3\\,\\text{s}$. Find angular deceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Equation",
          "explanation": "$\\alpha = (\\omega - \\omega_0)/t$"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ \\alpha = (0 - 12)/3 = -4\\,\\text{rad/s}^2 $$"
        }
      ],
      "final_answer": "Angular deceleration is $4\\,\\text{rad/s}^2$ opposite to rotation."
    },
    {
      "number": 5,
      "problem": "A disc of radius $0.5\\,\\text{m}$ rotates at $6\\,\\text{rad/s}$. Find the tangential velocity of a point on the rim.",
      "image": null,
      "step_by_step": [
        {
          "step": "Relation",
          "explanation": "$v = r \\omega$"
        },
        {
          "step": "Substitute",
          "calculation": "$$ v = 0.5 \\times 6 = 3\\,\\text{m/s} $$"
        }
      ],
      "final_answer": "The tangential velocity is $3\\,\\text{m/s}$."
    },
    {
      "number": 6,
      "problem": "A wheel of radius $0.4\\,\\text{m}$ has tangential acceleration $2\\,\\text{m/s}^2$. Find angular acceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Relation",
          "explanation": "$\\alpha = a_t / r$"
        },
        {
          "step": "Substitute",
          "calculation": "$$ \\alpha = 2 / 0.4 = 5\\,\\text{rad/s}^2 $$"
        }
      ],
      "final_answer": "Angular acceleration is $5\\,\\text{rad/s}^2$."
    },
    {
      "number": 7,
      "problem": "A wheel rotates with angular velocity $20\\,\\text{rad/s}$. Find the frequency of rotation in revolutions per second.",
      "image": null,
      "step_by_step": [
        {
          "step": "Relation",
          "explanation": "$f = \\omega / 2\\pi$"
        },
        {
          "step": "Substitute",
          "calculation": "$$ f = 20 / (2 \\pi) \\approx 3.18\\,\\text{rev/s} $$"
        }
      ],
      "final_answer": "Frequency is approximately $3.18\\,\\text{rev/s}$."
    },
    {
      "number": 8,
      "problem": "A wheel rotates $30\\,\\text{rad}$ in $5\\,\\text{s}$ at constant angular velocity. Find angular velocity.",
      "image": null,
      "step_by_step": [
        {
          "step": "Relation",
          "explanation": "$\\omega = \\theta / t$"
        },
        {
          "step": "Substitute",
          "calculation": "$$ \\omega = 30 / 5 = 6\\,\\text{rad/s} $$"
        }
      ],
      "final_answer": "Angular velocity is $6\\,\\text{rad/s}$."
    },
    {
      "number": 9,
      "problem": "A wheel accelerates from $4\\,\\text{rad/s}$ to $14\\,\\text{rad/s}$ in $5\\,\\text{s}$. Find angular displacement during acceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Equation",
          "explanation": "$\\theta = \\frac{\\omega_0 + \\omega}{2} t$ for constant angular acceleration"
        },
        {
          "step": "Substitute",
          "calculation": "$$ \\theta = (4 + 14)/2 \\times 5 = 9 \\times 5 = 45\\,\\text{rad} $$"
        }
      ],
      "final_answer": "Angular displacement is $45\\,\\text{rad}$."
    },
    {
      "number": 10,
      "problem": "A wheel of radius $0.6\\,\\text{m}$ rotates at $10\\,\\text{rad/s}$. Find the centripetal acceleration of a point on the rim.",
      "image": null,
      "step_by_step": [
        {
          "step": "Relation",
          "explanation": "$a_c = \\omega^2 r$"
        },
        {
          "step": "Substitute",
          "calculation": "$$ a_c = 10^2 \\times 0.6 = 100 \\times 0.6 = 60\\,\\text{m/s}^2 $$"
        }
      ],
      "final_answer": "Centripetal acceleration is $60\\,\\text{m/s}^2$."
    }
  ]
}
