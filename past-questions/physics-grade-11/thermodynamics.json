      "number": 1,
      "problem": "A 2 kg block of metal absorbs 5000 J of heat, increasing its temperature by 10°C. Find the specific heat capacity of the metal.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use specific heat formula",
          "explanation": "Q = m c ΔT"
        },
        {
          "step": "Rearrange for c",
          "calculation": "$$ c = \\frac{Q}{m \\Delta T} $$"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ c = \\frac{5000}{2 \\times 10} = 250\\,\\text{J/(kg·°C)} $$"
        }
      ],
      "final_answer": "The specific heat capacity is $250\\,\\text{J/(kg·°C)}$."
    },
    {
      "number": 2,
      "problem": "1 kg of water at 20°C is heated to 100°C. Find the heat required. Specific heat of water $c = 4200\\,\\text{J/(kg·°C)}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use Q = m c ΔT",
          "explanation": "Heat required = mass × specific heat × temperature change"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ Q = 1 \\times 4200 \\times (100 - 20) = 336000\\,\\text{J} $$"
        }
      ],
      "final_answer": "Heat required is $336000\\,\\text{J}$."
    },
    {
      "number": 3,
      "problem": "Calculate the work done when a gas expands from volume 2 m³ to 5 m³ under constant pressure 100 kPa.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use work formula for constant pressure",
          "explanation": "$$ W = P \\Delta V $$"
        },
        {
          "step": "Substitute values",
          "calculation": "$$ W = 100000 \\times (5 - 2) = 300000\\,\\text{J} $$"
        }
      ],
      "final_answer": "Work done is $300000\\,\\text{J}$."
    },
