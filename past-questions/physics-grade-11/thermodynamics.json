    {
      "number": 5,
      "problem": "A 0.5 kg block of ice at 0°C is converted to steam at 100°C. Find total heat absorbed. $L_f = 334000\\,\\text{J/kg}$, $c_{water} = 4200\\,\\text{J/(kg·°C)}$, $L_v = 2.26\\times10^6\\,\\text{J/kg}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Melting ice",
          "calculation": "$$ Q_1 = m L_f = 0.5 \\times 334000 = 167000\\,\\text{J} $$"
        },
        {
          "step": "Heating water to 100°C",
          "calculation": "$$ Q_2 = m c \\Delta T = 0.5 \\times 4200 \\times 100 = 210000\\,\\text{J} $$"
        },
        {
          "step": "Vaporizing water",
          "calculation": "$$ Q_3 = m L_v = 0.5 \\times 2.26\\times10^6 = 1.13\\times10^6\\,\\text{J} $$"
        },
        {
          "step": "Total heat",
          "calculation": "$$ Q_{total} = Q_1 + Q_2 + Q_3 = 167000 + 210000 + 1.13\\times10^6 \\approx 1.507\\times10^6\\,\\text{J} $$"
        }
      ],
      "final_answer": "Total heat absorbed is approximately $1.507 \\times 10^6\\,\\text{J}$."
    },
