{
  "course": "Physics Grade 12",
  "topic": "Quantum Physics",
  "problems": [
    {
      "number": 1,
      "problem": "A photon has a frequency of $6 \\times 10^{14}\\,\\text{Hz}$. Calculate its energy.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use Planck's formula",
          "calculation": "$E = h f$"
        },
        {
          "step": "Substitute values",
          "calculation": "$E = 6.626 \\times 10^{-34} \\cdot 6 \\times 10^{14} \\approx 3.976 \\times 10^{-19}\\,\\text{J}$"
        }
      ],
      "final_answer": "Photon energy is approximately $3.98 \\times 10^{-19}\\,\\text{J}$."
    },
    {
      "number": 2,
      "problem": "Calculate the wavelength of a photon with energy $4 \\times 10^{-19}\\,\\text{J}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use the energy-wavelength relation",
          "calculation": "$E = \\frac{h c}{\\lambda}$"
        },
        {
          "step": "Rearrange for wavelength",
          "calculation": "$\\lambda = \\frac{h c}{E}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$\\lambda = \\frac{6.626 \\times 10^{-34} \\cdot 3 \\times 10^8}{4 \\times 10^{-19}} \\approx 4.97 \\times 10^{-7}\\,\\text{m}$"
        }
      ],
      "final_answer": "Wavelength is approximately $497\\,\\text{nm}$."
    },
    {
      "number": 3,
      "problem": "An electron transitions from energy level $E_2 = -3.4\\,\\text{eV}$ to $E_1 = -13.6\\,\\text{eV}$. Calculate the photon energy emitted.",
      "image": null,
      "step_by_step": [
        {
          "step": "Photon energy",
          "calculation": "$E_{photon} = E_1 - E_2$"
        },
        {
          "step": "Substitute values",
          "calculation": "$E_{photon} = -13.6 - (-3.4) = -10.2\\,\\text{eV}$"
        }
      ],
      "final_answer": "Photon energy emitted is $10.2\\,\\text{eV}$."
    },
    {
      "number": 4,
      "problem": "Calculate the frequency of a photon with energy $10.2\\,\\text{eV}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Convert eV to Joules",
          "calculation": "$E = 10.2 \\cdot 1.602 \\times 10^{-19} \\approx 1.634 \\times 10^{-18}\\,\\text{J}$"
        },
        {
          "step": "Use Planck's formula",
          "calculation": "$f = \\frac{E}{h} = \\frac{1.634 \\times 10^{-18}}{6.626 \\times 10^{-34}} \\approx 2.47 \\times 10^{15}\\,\\text{Hz}$"
        }
      ],
      "final_answer": "Photon frequency is approximately $2.47 \\times 10^{15}\\,\\text{Hz}$."
    },
    {
      "number": 5,
      "problem": "Calculate the de Broglie wavelength of an electron moving at speed $2 \\times 10^6\\,\\text{m/s}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "de Broglie wavelength formula",
          "calculation": "$\\lambda = \\frac{h}{mv}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$\\lambda = \\frac{6.626 \\times 10^{-34}}{9.11 \\times 10^{-31} \\cdot 2 \\times 10^6} \\approx 3.63 \\times 10^{-10}\\,\\text{m}$"
        }
      ],
      "final_answer": "de Broglie wavelength is approximately $0.363\\,\\text{nm}$."
    },
    {
      "number": 6,
      "problem": "A photon has a wavelength of $500\\,\\text{nm}$. Find its momentum.",
      "image": null,
      "step_by_step": [
        {
          "step": "Momentum of photon",
          "calculation": "$p = \\frac{h}{\\lambda}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$p = \\frac{6.626 \\times 10^{-34}}{500 \\times 10^{-9}} \\approx 1.325 \\times 10^{-27}\\,\\text{kg m/s}$"
        }
      ],
      "final_answer": "Photon momentum is approximately $1.33 \\times 10^{-27}\\,\\text{kg m/s}$."
    },
    {
      "number": 7,
      "problem": "Calculate the kinetic energy of an electron accelerated through a potential difference of $1000\\,\\text{V}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Kinetic energy",
          "calculation": "$KE = e V$"
        },
        {
          "step": "Substitute values",
          "calculation": "$KE = 1.602 \\times 10^{-19} \\cdot 1000 \\approx 1.602 \\times 10^{-16}\\,\\text{J}$"
        }
      ],
      "final_answer": "Electron kinetic energy is $1.602 \\times 10^{-16}\\,\\text{J}$."
    },
    {
      "number": 8,
      "problem": "Find the velocity of the electron in Problem 7.",
      "image": null,
      "step_by_step": [
        {
          "step": "Kinetic energy relation",
          "calculation": "$KE = \\frac{1}{2} m v^2 \\Rightarrow v = \\sqrt{\\frac{2 KE}{m}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$v = \\sqrt{\\frac{2 \\cdot 1.602 \\times 10^{-16}}{9.11 \\times 10^{-31}}} \\approx 1.88 \\times 10^7\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Electron velocity is approximately $1.88 \\times 10^7\\,\\text{m/s}$."
    },
    {
      "number": 9,
      "problem": "Explain the photoelectric effect.",
      "image": null,
      "step_by_step": [
        {
          "step": "Concept",
          "explanation": "When light of sufficient frequency shines on a metal, electrons are ejected. The energy of each photon must exceed the work function $\\phi$ of the metal."
        }
      ],
      "final_answer": "Photoelectric effect: electrons are emitted from a metal surface if photon energy exceeds the work function."
    },
    {
      "number": 10,
      "problem": "An electron absorbs a photon of energy $4\\,\\text{eV}$, and the work function of the metal is $2.5\\,\\text{eV}$. Calculate the kinetic energy of the emitted electron.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use photoelectric equation",
          "calculation": "$KE = E_{photon} - \\phi$"
        },
        {
          "step": "Substitute values",
          "calculation": "$KE = 4 - 2.5 = 1.5\\,\\text{eV}$"
        }
      ],
      "final_answer": "Kinetic energy of the emitted electron is $1.5\\,\\text{eV}$."
    }
  ]
}
