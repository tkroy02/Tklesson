  "problems": [
    {
      "number": 1,
      "problem": "A mass of 0.5 kg is attached to a spring with spring constant $k = 200\\,\\text{N/m}$. Find the natural frequency of oscillation.",
      "image": null,
      "step_by_step": [
        {
          "step": "Natural frequency formula",
          "calculation": "$f = \\frac{1}{2\\pi} \\sqrt{\\frac{k}{m}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$f = \\frac{1}{2\\pi} \\sqrt{\\frac{200}{0.5}} = \\frac{1}{2\\pi} \\sqrt{400} = \\frac{20}{2\\pi} \\approx 3.18\\,\\text{Hz}$"
        }
      ],
      "final_answer": "Natural frequency is approximately $3.18\\,\\text{Hz}$."
    },
    {
      "number": 2,
      "problem": "A simple pendulum of length 1.2 m swings with small amplitude. Find its period.",
      "image": null,
      "step_by_step": [
        {
          "step": "Period formula for pendulum",
          "calculation": "$T = 2\\pi \\sqrt{\\frac{L}{g}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$T = 2\\pi \\sqrt{\\frac{1.2}{9.8}} \\approx 2\\pi \\cdot 0.350 \\approx 2.20\\,\\text{s}$"
        }
      ],
      "final_answer": "Period of the pendulum is approximately $2.20\\,\\text{s}$."
    },
    {
      "number": 3,
      "problem": "A mass-spring system oscillates with amplitude $A = 0.1\\,\\text{m}$ and angular frequency $\\omega = 10\\,\\text{rad/s}$. Find the maximum velocity.",
      "image": null,
      "step_by_step": [
        {
          "step": "Maximum velocity formula",
          "calculation": "$v_{max} = \\omega A$"
        },
        {
          "step": "Substitute values",
          "calculation": "$v_{max} = 10 \\cdot 0.1 = 1\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Maximum velocity is $1\\,\\text{m/s}$."
    },
    {
      "number": 4,
      "problem": "Determine the maximum acceleration of the system in problem 3.",
      "image": null,
      "step_by_step": [
        {
          "step": "Maximum acceleration formula",
          "calculation": "$a_{max} = \\omega^2 A$"
        },
        {
          "step": "Substitute values",
          "calculation": "$a_{max} = 10^2 \\cdot 0.1 = 100 \\cdot 0.1 = 10\\,\\text{m/s}^2$"
        }
      ],
      "final_answer": "Maximum acceleration is $10\\,\\text{m/s}^2$."
    },
    {
      "number": 5,
      "problem": "A driving force with frequency equal to the natural frequency acts on a system. What phenomenon occurs?",
      "image": null,
      "step_by_step": [
        {
          "step": "Concept",
          "explanation": "When the driving frequency equals the natural frequency, resonance occurs, causing large amplitude oscillations."
