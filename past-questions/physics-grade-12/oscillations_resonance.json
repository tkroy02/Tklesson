    {
      "number": 7,
      "problem": "A 0.2-kg mass attached to a spring is oscillating with amplitude 0.05 m. Calculate total energy of the system if $k = 50\\,\\text{N/m}$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Total energy formula",
          "calculation": "$E = \\frac{1}{2} k A^2$"
        },
        {
          "step": "Substitute values",
          "calculation": "$E = 0.5 \\cdot 50 \\cdot (0.05)^2 = 25 \\cdot 0.0025 = 0.0625\\,\\text{J}$"
        }
      ],
      "final_answer": "Total energy is $0.0625\\,\\text{J}$."
    },
    {
      "number": 8,
      "problem": "For the same system, find the velocity when the displacement is half the amplitude.",
      "image": null,
      "step_by_step": [
        {
          "step": "Velocity formula in SHM",
          "calculation": "$v = \\omega \\sqrt{A^2 - x^2}$"
        },
        {
          "step": "Angular frequency",
          "calculation": "$\\omega = \\sqrt{k/m} = \\sqrt{50/0.2} = \\sqrt{250} \\approx 15.81\\,\\text{rad/s}$"
        },
        {
          "step": "Velocity at $x = A/2$",
          "calculation": "$v = 15.81 \\cdot \\sqrt{0.05^2 - 0.025^2} = 15.81 \\cdot \\sqrt{0.0025 - 0.000625} = 15.81 \\cdot \\sqrt{0.001875} \\approx 0.684\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Velocity is approximately $0.684\\,\\text{m/s}$."
    },
    {
      "number": 9,
      "problem": "A damped oscillator loses 5% of its amplitude each cycle. If initial amplitude is 0.1 m, find amplitude after 3 cycles.",
      "image": null,
      "step_by_step": [
        {
          "step": "Amplitude after n cycles",
          "calculation": "$A_n = A_0 (1 - 0.05)^n$"
        },
        {
          "step": "Substitute values",
          "calculation": "$A_3 = 0.1 (0.95)^3 \\approx 0.1 \\cdot 0.857 = 0.0857\\,\\text{m}$"
        }
      ],
      "final_answer": "Amplitude after 3 cycles is approximately $0.0857\\,\\text{m}$."
    },
