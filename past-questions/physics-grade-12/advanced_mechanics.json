{
  "course": "Physics Grade 12",
  "topic": "Advanced Mechanics",
  "problems": [
    {
      "number": 1,
      "problem": "A block of mass $5\\,\\text{kg}$ slides down a frictionless incline of angle $30^\\circ$. Find its acceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Identify forces along incline",
          "explanation": "Component of weight along incline: $F = mg \\sin\\theta$"
        },
        {
          "step": "Use Newton's second law",
          "explanation": "$F = ma \\Rightarrow mg \\sin\\theta = ma$",
          "calculation": "$a = g \\sin\\theta$"
        },
        {
          "step": "Substitute values",
          "calculation": "$a = 9.8 \\cdot \\sin30^\\circ = 4.9\\,\\text{m/s}^2$"
        }
      ],
      "final_answer": "Acceleration of the block is $4.9\\,\\text{m/s}^2$."
    },
    {
      "number": 2,
      "problem": "A projectile is launched with speed $20\\,\\text{m/s}$ at angle $45^\\circ$. Find the maximum height.",
      "image": null,
      "step_by_step": [
        {
          "step": "Vertical component of velocity",
          "calculation": "$v_y = v \\sin\\theta = 20 \\cdot \\sin45^\\circ \\approx 14.14\\,\\text{m/s}$"
        },
        {
          "step": "Maximum height formula",
          "calculation": "$H = \\frac{v_y^2}{2g} = \\frac{(14.14)^2}{2\\cdot9.8} \\approx 10.2\\,\\text{m}$"
        }
      ],
      "final_answer": "Maximum height is approximately $10.2\\,\\text{m}$."
    },
    {
      "number": 3,
      "problem": "A car rounds a curve of radius $50\\,\\text{m}$ at $10\\,\\text{m/s}$. Find the centripetal acceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Centripetal acceleration formula",
          "calculation": "$a_c = \\frac{v^2}{r}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$a_c = \\frac{10^2}{50} = 2\\,\\text{m/s}^2$"
        }
      ],
      "final_answer": "Centripetal acceleration is $2\\,\\text{m/s}^2$."
    },
    {
      "number": 4,
      "problem": "A 2-kg mass is attached to a spring with $k = 200\\,\\text{N/m}$. Find the period of oscillation.",
      "image": null,
      "step_by_step": [
        {
          "step": "Oscillation period formula",
          "calculation": "$T = 2\\pi \\sqrt{\\frac{m}{k}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$T = 2\\pi \\sqrt{\\frac{2}{200}} = 2\\pi \\cdot 0.1 \\approx 0.628\\,\\text{s}$"
        }
      ],
      "final_answer": "Period of oscillation is approximately $0.628\\,\\text{s}$."
    },
    {
      "number": 5,
      "problem": "A wheel of radius $0.5\\,\\text{m}$ rotates at $10\\,\\text{rad/s}$. Find the linear speed at the rim.",
      "image": null,
      "step_by_step": [
        {
          "step": "Linear speed formula",
          "calculation": "$v = r\\omega$"
        },
        {
          "step": "Substitute values",
          "calculation": "$v = 0.5 \\cdot 10 = 5\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Linear speed at the rim is $5\\,\\text{m/s}$."
    },
    {
      "number": 6,
      "problem": "A 3-kg block is moving at $4\\,\\text{m/s}$ on a frictionless surface. What is its kinetic energy?",
      "image": null,
      "step_by_step": [
        {
          "step": "Kinetic energy formula",
          "calculation": "$K.E. = \\frac{1}{2} m v^2$"
        },
        {
          "step": "Substitute values",
          "calculation": "$K.E. = 0.5 \\cdot 3 \\cdot 4^2 = 24\\,\\text{J}$"
        }
      ],
      "final_answer": "Kinetic energy is $24\\,\\text{J}$."
    },
    {
      "number": 7,
      "problem": "A torque of $10\\,\\text{Nm}$ is applied to a wheel with moment of inertia $2\\,\\text{kg·m²}$. Find the angular acceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Angular acceleration formula",
          "calculation": "$\\tau = I \\alpha \\Rightarrow \\alpha = \\frac{\\tau}{I}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$\\alpha = \\frac{10}{2} = 5\\,\\text{rad/s²}$"
        }
      ],
      "final_answer": "Angular acceleration is $5\\,\\text{rad/s²}$."
    },
    {
      "number": 8,
      "problem": "A 5-kg object is dropped from $20\\,\\text{m}$. Find its velocity just before hitting the ground.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use kinematics",
          "calculation": "$v^2 = u^2 + 2gs$"
        },
        {
          "step": "Substitute values",
          "calculation": "$v^2 = 0 + 2\\cdot9.8\\cdot20 = 392 \\Rightarrow v \\approx 19.8\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Velocity just before impact is approximately $19.8\\,\\text{m/s}$."
    },
    {
      "number": 9,
      "problem": "Two masses $m_1 = 3\\,\\text{kg}$ and $m_2 = 2\\,\\text{kg}$ are connected by a rope over a frictionless pulley. Find the acceleration.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use Newton's second law for system",
          "calculation": "$a = \\frac{(m_1 - m_2)g}{m_1 + m_2}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$a = \\frac{(3-2)\\cdot9.8}{3+2} = \\frac{9.8}{5} \\approx 1.96\\,\\text{m/s²}$"
        }
      ],
      "final_answer": "Acceleration of the system is approximately $1.96\\,\\text{m/s²}$."
    },
    {
      "number": 10,
      "problem": "A pendulum of length $1\\,\\text{m}$ swings with small amplitude. Find its period.",
      "image": null,
      "step_by_step": [
        {
          "step": "Pendulum period formula",
          "calculation": "$T = 2\\pi \\sqrt{\\frac{L}{g}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$T = 2\\pi \\sqrt{\\frac{1}{9.8}} \\approx 2.01\\,\\text{s}$"
        }
      ],
      "final_answer": "Period of pendulum is approximately $2.01\\,\\text{s}$."
    }
  ]
