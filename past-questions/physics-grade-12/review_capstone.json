  "problems": [
    {
      "number": 1,
      "problem": "A car accelerates from 0 to 30 m/s in 10 s. Calculate its acceleration and the distance traveled.",
      "image": null,
      "step_by_step": [
        {
          "step": "Given values",
          "explanation": "Initial velocity $v_0 = 0$, final velocity $v_f = 30$ m/s, time $t = 10$ s"
        },
        {
          "step": "Calculate acceleration",
          "calculation": "$a = (v_f - v_0)/t = (30 - 0)/10 = 3 \\, \\text{m/s}^2$"
        },
        {
          "step": "Calculate distance",
          "calculation": "$d = v_0 t + \\frac{1}{2} a t^2 = 0 + 0.5 * 3 * 10^2 = 150 \\, \\text{m}$"
        }
      ],
      "final_answer": "Acceleration: $3 \\, \\text{m/s}^2$, Distance: $150 \\, \\text{m}$"
    },
    {
      "number": 2,
      "problem": "A 5 kg block slides down a frictionless incline of height 4 m. Find its speed at the bottom.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use conservation of energy",
          "calculation": "$m g h = \\frac{1}{2} m v^2$"
        },
        {
          "step": "Solve for $v$",
          "calculation": "$v = \\sqrt{2 g h} = \\sqrt{2 * 9.8 * 4} \\approx 8.85 \\, \\text{m/s}$"
        }
      ],
      "final_answer": "Speed at the bottom: $8.85 \\, \\text{m/s}$"
    },
    {
      "number": 3,
      "problem": "A satellite orbits Earth at 400 km above the surface. Calculate its orbital speed. (Radius of Earth $R = 6.37 \\times 10^6$ m, $G M = 3.986 \\times 10^{14}$ m$^3$/s$^2$)",
      "image": null,
      "step_by_step": [
        {
          "step": "Orbital speed formula",
          "calculation": "$v = \\sqrt{GM/(R+h)}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$v = \\sqrt{3.986\\times10^{14}/(6.37\\times10^6 + 4\\times10^5)} \\approx \\sqrt{3.986\\times10^{14}/6.77\\times10^6} \\approx 7670 \\, \\text{m/s}$"
        }
      ],
      "final_answer": "Orbital speed: $7670 \\, \\text{m/s}$"
    },
    {
      "number": 4,
      "problem": "A light ray passes from air ($n=1.0$) into glass ($n=1.5$) at an incident angle of 30°. Find the refraction angle.",
      "image": null,
      "step_by_step": [
        {
          "step": "Snell's Law",
          "calculation": "$n_1 \\sin \\theta_1 = n_2 \\sin \\theta_2$"
        },
        {
          "step": "Solve for $\\theta_2$",
          "calculation": "$\\sin \\theta_2 = (1.0/1.5) \\sin 30^\\circ = 0.333$, $\\theta_2 = \\arcsin(0.333) \\approx 19.5^\\circ$"
        }
      ],
      "final_answer": "Refraction angle: $19.5^\\circ$"
    },
    {
      "number": 5,
      "problem": "A muon has a rest lifetime of 2.2 μs and moves at $0.98c$. Determine its lifetime in the laboratory frame.",
      "image": null,
      "step_by_step": [
        {
          "step": "Time dilation formula",
          "calculation": "$\\Delta t = \\frac{\\Delta t_0}{\\sqrt{1 - v^2/c^2}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$\\Delta t = 2.2\\times10^{-6}/\\sqrt{1 - 0.98^2} \\approx 1.55 \\times 10^{-5} \\, \\text{s}$"
        }
      ],
      "final_answer": "Lifetime in lab frame: $1.55 \\times 10^{-5}$ s"
    },
    {
      "number": 6,
      "problem": "A 3 kg mass is attached to a spring of $k=200$ N/m. Find the period of oscillation.",
      "image": null,
      "step_by_step": [
        {
          "step": "Period formula",
          "calculation": "$T = 2\\pi \\sqrt{m/k}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$T = 2 \\pi \\sqrt{3/200} \\approx 0.77 \\, \\text{s}$"
        }
      ],
      "final_answer": "Period: $0.77$ s"
    },
    {
      "number": 7,
      "problem": "A capacitor of 10 μF is connected to a 12 V battery. Find the energy stored.",
      "image": null,
      "step_by_step": [
        {
          "step": "Energy formula",
          "calculation": "$U = \\frac{1}{2} C V^2$"
        },
        {
          "step": "Substitute values",
          "calculation": "$U = 0.5 * 10\\times10^{-6} * 12^2 \\approx 7.2 \\times 10^{-4} \\, \\text{J}$"
        }
      ],
      "final_answer": "Energy stored: $7.2 \\times 10^{-4}$ J"
    },
    {
      "number": 8,
      "problem": "Two point charges, +2 μC and -3 μC, are 4 m apart. Calculate the force between them.",
      "image": null,
      "step_by_step": [
        {
          "step": "Coulomb's law",
          "calculation": "$F = k |q_1 q_2| / r^2$"
        },
        {
          "step": "Substitute values",
          "calculation": "$F = 9\\times10^9 * |2\\times10^{-6} * (-3\\times10^{-6})| / 4^2 \\approx 3.375 \\text{N}$"
        }
      ],
      "final_answer": "Force magnitude: $3.375$ N (attractive)"
    },
    {
      "number": 9,
      "problem": "A 1500 kg car moving at 20 m/s brakes to a stop in 5 s. Calculate the braking force.",
      "image": null,
      "step_by_step": [
        {
          "step": "Acceleration",
          "calculation": "$a = (v_f - v_0)/t = (0 - 20)/5 = -4 \\, \\text{m/s}^2$"
        },
        {
          "step": "Force",
          "calculation": "$F = m a = 1500 * (-4) = -6000 \\, \\text{N}$"
        }
      ],
      "final_answer": "Braking force: $6000$ N (opposite to motion)"
    },
    {
      "number": 10,
      "problem": "A student performs a capstone experiment measuring the acceleration due to gravity using a pendulum of length 1 m and period 2 s. Calculate the experimental $g$.",
      "image": null,
      "step_by_step": [
        {
          "step": "Pendulum formula",
          "calculation": "$T = 2\\pi \\sqrt{L/g}$"
        },
        {
          "step": "Solve for $g$",
          "calculation": "$g = 4 \\pi^2 L / T^2 = 4 \\pi^2 * 1 / 2^2 \\approx 9.87 \\, \\text{m/s}^2$"
        }
      ],
      "final_answer": "Experimental gravity: $9.87 \\, \\text{m/s}^2$"
    }
  ]
