  "problems": [
    {
      "number": 1,
      "problem": "Calculate the gravitational force between two 5-kg masses separated by 2 meters.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use Newton's law of gravitation",
          "calculation": "$F = G \\frac{m_1 m_2}{r^2}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$F = 6.67\\times10^{-11} \\cdot \\frac{5 \\cdot 5}{2^2} = 4.1675 \\times 10^{-10}\\,\\text{N}$"
        }
      ],
      "final_answer": "Gravitational force is $4.17 \\times 10^{-10}\\,\\text{N}$."
    },
    {
      "number": 2,
      "problem": "A 1000-kg satellite orbits the Earth at 300 km above the surface. Find the gravitational force acting on it.",
      "image": null,
      "step_by_step": [
        {
          "step": "Distance from Earth's center",
          "calculation": "$r = R_{Earth} + h = 6.37\\times10^6 + 3\\times10^5 = 6.67\\times10^6\\,\\text{m}$"
        },
        {
          "step": "Gravitational force formula",
          "calculation": "$F = G \\frac{M_{Earth} m}{r^2} = 6.67\\times10^{-11} \\cdot \\frac{5.97\\times10^{24} \\cdot 1000}{(6.67\\times10^6)^2}$"
        },
        {
          "step": "Compute force",
          "calculation": "$F \\approx 8.96 \\times 10^3\\,\\text{N}$"
        }
      ],
      "final_answer": "Gravitational force on the satellite is approximately $8.96\\times10^3\\,\\text{N}$."
    },
    {
      "number": 3,
      "problem": "Find the orbital speed of the same satellite in problem 2.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use centripetal force equals gravitational force",
          "calculation": "$\\frac{mv^2}{r} = G \\frac{M m}{r^2} \\Rightarrow v = \\sqrt{\\frac{GM}{r}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$v = \\sqrt{\\frac{6.67\\times10^{-11} \\cdot 5.97\\times10^{24}}{6.67\\times10^6}} \\approx 7.73\\times10^3\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Orbital speed is approximately $7.73\\,\\text{km/s}$."
    },
    {
      "number": 4,
      "problem": "Calculate the orbital period of the satellite in problem 2.",
      "image": null,
      "step_by_step": [
        {
          "step": "Orbital period formula",
          "calculation": "$T = \\frac{2\\pi r}{v}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$T = \\frac{2\\pi \\cdot 6.67\\times10^6}{7.73\\times10^3} \\approx 5418\\,\\text{s}$"
        },
        {
          "step": "Convert to hours",
          "calculation": "$T \\approx 1.5\\,\\text{hours}$"
        }
      ],
      "final_answer": "Orbital period is approximately $1.5$ hours."
    },
    {
      "number": 5,
      "problem": "Find the escape velocity from Earth.",
      "image": null,
      "step_by_step": [
        {
          "step": "Escape velocity formula",
          "calculation": "$v_e = \\sqrt{\\frac{2GM}{R}}$"
        },
        {
          "step": "Substitute values",
          "calculation": "$v_e = \\sqrt{\\frac{2 \\cdot 6.67\\times10^{-11} \\cdot 5.97\\times10^{24}}{6.37\\times10^6}} \\approx 1.12\\times10^4\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Escape velocity is approximately $11.2\\,\\text{km/s}$."
    },
    {
      "number": 6,
      "problem": "A satellite in circular orbit has a radius twice that of another satellite. How does its speed compare to the first?",
      "image": null,
      "step_by_step": [
        {
          "step": "Orbital speed formula",
          "calculation": "$v = \\sqrt{\\frac{GM}{r}}$"
        },
        {
          "step": "Double radius comparison",
          "explanation": "If $r_2 = 2 r_1$, then $v_2 = \\sqrt{\\frac{GM}{2 r_1}} = \\frac{v_1}{\\sqrt{2}}$"
        }
      ],
      "final_answer": "The satellite at twice the radius moves at $1/\\sqrt{2}$ the speed of the first satellite."
    },
    {
      "number": 7,
      "problem": "Calculate the gravitational potential energy of a 500-kg satellite at 500 km above Earth's surface.",
      "image": null,
      "step_by_step": [
        {
          "step": "Distance from Earth's center",
          "calculation": "$r = R_{Earth} + h = 6.37\\times10^6 + 5\\times10^5 = 6.87\\times10^6\\,\\text{m}$"
        },
        {
          "step": "Gravitational potential energy formula",
          "calculation": "$U = -G \\frac{Mm}{r} = -6.67\\times10^{-11} \\cdot \\frac{5.97\\times10^{24} \\cdot 500}{6.87\\times10^6}$"
        },
        {
          "step": "Compute energy",
          "calculation": "$U \\approx -2.9 \\times 10^{10}\\,\\text{J}$"
        }
      ],
      "final_answer": "Gravitational potential energy is approximately $-2.9 \\times 10^{10}\\,\\text{J}$."
    },
    {
      "number": 8,
      "problem": "Determine the speed of a satellite in a geostationary orbit (height $h \\approx 35786$ km).",
      "image": null,
      "step_by_step": [
        {
          "step": "Distance from Earth's center",
          "calculation": "$r = R_{Earth} + h = 6.37\\times10^3 + 3.5786\\times10^4 \\approx 4.2156\\times10^4\\,\\text{km} = 4.2156\\times10^7\\,\\text{m}$"
        },
        {
          "step": "Orbital speed formula",
          "calculation": "$v = \\sqrt{\\frac{GM}{r}} = \\sqrt{\\frac{6.67\\times10^{-11} \\cdot 5.97\\times10^{24}}{4.2156\\times10^7}} \\approx 3.07\\times10^3\\,\\text{m/s}$"
        }
      ],
      "final_answer": "Geostationary orbital speed is approximately $3.07\\,\\text{km/s}$."
    },
    {
      "number": 9,
      "problem": "Two satellites have equal masses. One orbits at $r$, the other at $2r$. Compare their orbital periods.",
      "image": null,
      "step_by_step": [
        {
          "step": "Kepler's Third Law",
          "calculation": "$T^2 \\propto r^3 \\Rightarrow \\frac{T_2}{T_1} = \\left(\\frac{r_2}{r_1}\\right)^{3/2}$"
        },
        {
          "step": "Substitute ratio",
          "calculation": "$T_2/T_1 = (2)^{3/2} \\approx 2.828$"
        }
      ],
      "final_answer": "The outer satellite has a period about 2.83 times longer than the inner satellite."
    },
    {
      "number": 10,
      "problem": "A satellite loses altitude and its orbital radius decreases. Explain what happens to its speed and orbital period.",
      "image": null,
      "step_by_step": [
        {
          "step": "Orbital speed relation",
          "explanation": "Since $v = \\sqrt{GM/r}$, decreasing $r$ increases $v$."
        },
        {
          "step": "Orbital period relation",
          "explanation": "From $T = 2\\pi\\sqrt{r^3/GM}$, decreasing $r$ decreases $T$."
        }
      ],
      "final_answer": "The satellite speeds up and its orbital period decreases."
    }
