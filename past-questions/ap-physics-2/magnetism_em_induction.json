{
  "course": "Physics Grade 12",
  "topic": "Magnetism & Electromagnetic Induction",
  "problems": [
    {
      "number": 1,
      "problem": "A wire of length 0.5 m carries a current of 2 A in a magnetic field of 0.3 T perpendicular to the wire. Find the magnetic force.",
      "image": null,
      "step_by_step": [
        {
          "step": "Formula for magnetic force",
          "explanation": "$F = B I L \\sin\\theta$"
        },
        {
          "step": "Substitute values",
          "explanation": "$F = 0.3 * 2 * 0.5 * \\sin 90^\\circ = 0.3 \\text{ N}$"
        }
      ],
      "final_answer": "Magnetic force: $F = 0.3 \\, \\text{N}$"
    },
    {
      "number": 2,
      "problem": "A coil of 50 turns and area 0.02 m² is placed in a magnetic field of 0.1 T. If the field is perpendicular to the plane of the coil, find the flux.",
      "image": null,
      "step_by_step": [
        {
          "step": "Magnetic flux formula",
          "explanation": "$\\Phi = N B A \\cos\\theta$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\Phi = 50 * 0.1 * 0.02 * \\cos 0^\\circ = 0.1 \\, \\text{Wb}$"
        }
      ],
      "final_answer": "Magnetic flux: $\\Phi = 0.1 \\, \\text{Wb}$"
    },
    {
      "number": 3,
      "problem": "A magnetic flux through a coil decreases from 0.2 Wb to 0 Wb in 0.05 s. Find induced EMF.",
      "image": null,
      "step_by_step": [
        {
          "step": "Faraday's law",
          "explanation": "$\\mathcal{E} = - \\Delta \\Phi / \\Delta t$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\mathcal{E} = - (0 - 0.2)/0.05 = 4 \\, \\text{V}$"
        }
      ],
      "final_answer": "Induced EMF: $\\mathcal{E} = 4 \\, \\text{V}$"
    },
    {
      "number": 4,
      "problem": "A rectangular loop of area 0.1 m² rotates in a 0.5 T field. What is the maximum EMF if it rotates at 50 rad/s?",
      "image": null,
      "step_by_step": [
        {
          "step": "Formula for max EMF",
          "explanation": "$\\mathcal{E}_{max} = N B A \\omega$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\mathcal{E}_{max} = 1 * 0.5 * 0.1 * 50 = 2.5 \\, \\text{V}$"
        }
      ],
      "final_answer": "Maximum EMF: $\\mathcal{E}_{max} = 2.5 \\, \\text{V}$"
    },
    {
      "number": 5,
      "problem": "A 10-turn coil has a radius of 0.1 m. A magnetic field perpendicular to the plane changes at 0.2 T/s. Find the induced EMF.",
      "image": null,
      "step_by_step": [
        {
          "step": "Area of one turn",
          "explanation": "$A = \\pi r^2 = \\pi * 0.1^2 \\approx 0.0314 \\, \\text{m²}$"
        },
        {
          "step": "Faraday's law",
          "explanation": "$\\mathcal{E} = N A \\frac{dB}{dt} = 10 * 0.0314 * 0.2 \\approx 0.0628 \\, \\text{V}$"
        }
      ],
      "final_answer": "Induced EMF: $\\mathcal{E} \\approx 0.0628 \\, \\text{V}$"
    },
    {
      "number": 6,
      "problem": "A straight wire of 1 m moves at 5 m/s perpendicular to a 0.2 T field. Find the induced EMF.",
      "image": null,
      "step_by_step": [
        {
          "step": "EMF for moving conductor",
          "explanation": "$\\mathcal{E} = B L v$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\mathcal{E} = 0.2 * 1 * 5 = 1 \\, \\text{V}$"
        }
      ],
      "final_answer": "Induced EMF: $\\mathcal{E} = 1 \\, \\text{V}$"
    },
    {
      "number": 7,
      "problem": "A 0.05 H inductor has a current change of 2 A in 0.1 s. Find induced EMF.",
      "image": null,
      "step_by_step": [
        {
          "step": "Inductor EMF",
          "explanation": "$\\mathcal{E} = -L \\frac{dI}{dt}$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\mathcal{E} = -0.05 * (2 / 0.1) = -1 \\, \\text{V}$"
        }
      ],
      "final_answer": "Induced EMF: $\\mathcal{E} = 1 \\, \\text{V}$ (magnitude)"
    },
    {
      "number": 8,
      "problem": "A coil with 20 turns and area 0.05 m² is in a magnetic field changing at 0.4 T/s. Find induced EMF.",
      "image": null,
      "step_by_step": [
        {
          "step": "Faraday's law",
          "explanation": "$\\mathcal{E} = N A \\frac{dB}{dt} = 20 * 0.05 * 0.4 = 0.4 \\, \\text{V}$"
        }
      ],
      "final_answer": "Induced EMF: $\\mathcal{E} = 0.4 \\, \\text{V}$"
