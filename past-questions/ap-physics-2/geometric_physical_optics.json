    {
      "number": 1,
      "problem": "A ray of light strikes a plane mirror at an angle of incidence of $30^\\circ$. Find the angle of reflection.",
      "image": null,
      "step_by_step": [
        {
          "step": "Law of reflection",
          "explanation": "The angle of reflection equals the angle of incidence: $\\theta_r = \\theta_i$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\theta_r = 30^\\circ$"
        }
      ],
      "final_answer": "Angle of reflection: $30^\\circ$"
    },
    {
      "number": 2,
      "problem": "A concave mirror has a focal length of 20 cm. An object is placed 60 cm from the mirror. Find the image distance.",
      "image": null,
      "step_by_step": [
        {
          "step": "Mirror equation",
          "explanation": "$\\frac{1}{f} = \\frac{1}{u} + \\frac{1}{v}$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\frac{1}{20} = \\frac{1}{60} + \\frac{1}{v} \\implies \\frac{1}{v} = \\frac{1}{20} - \\frac{1}{60} = \\frac{2}{60} = \\frac{1}{30}$"
        }
      ],
      "final_answer": "Image distance: $v = 30 \\, \\text{cm}$"
    },
    {
      "number": 3,
      "problem": "A convex lens of focal length 15 cm forms a real image 45 cm from the lens. Find the object distance.",
      "image": null,
      "step_by_step": [
        {
          "step": "Lens equation",
          "explanation": "$\\frac{1}{f} = \\frac{1}{u} + \\frac{1}{v}$"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\frac{1}{15} = \\frac{1}{u} + \\frac{1}{45} \\implies \\frac{1}{u} = \\frac{1}{15} - \\frac{1}{45} = \\frac{2}{45}$"
        }
      ],
      "final_answer": "Object distance: $u = 22.5 \\, \\text{cm}$"
    },
    {
      "number": 4,
      "problem": "Light passes from air ($n = 1$) into glass ($n = 1.5$) at an angle of incidence of $45^\\circ$. Find the angle of refraction.",
      "image": null,
      "step_by_step": [
        {
          "step": "Snell's law",
          "explanation": "$n_1 \\sin\\theta_1 = n_2 \\sin\\theta_2$"
        },
        {
          "step": "Substitute values",
          "explanation": "$1 * \\sin 45^\\circ = 1.5 * \\sin\\theta_2 \\implies \\sin\\theta_2 = 0.707/1.5 \\approx 0.471$"
        },
        {
          "step": "Find angle",
          "explanation": "$\\theta_2 \\approx 28.1^\\circ$"
        }
      ],
      "final_answer": "Angle of refraction: $\\theta_2 \\approx 28.1^\\circ$"
    },
    {
      "number": 5,
      "problem": "A thin converging lens forms a virtual image 10 cm behind the lens for an object placed 5 cm in front. Find focal length.",
      "image": null,
      "step_by_step": [
        {
          "step": "Lens equation",
          "explanation": "$\\frac{1}{f} = \\frac{1}{u} + \\frac{1}{v}$ (take $v$ as negative for virtual image)"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\frac{1}{f} = \\frac{1}{5} + \\frac{1}{-10} = \\frac{1}{10}$"
        }
      ],
      "final_answer": "Focal length: $f = 10 \\, \\text{cm}$"
    },
    {
      "number": 6,
      "problem": "A diffraction grating has 500 lines/mm. Find the first-order maximum angle for light of wavelength 600 nm.",
      "image": null,
      "step_by_step": [
        {
          "step": "Grating equation",
          "explanation": "$d \\sin\\theta = m \\lambda$, where $d = 1/(lines\\ per\\ m)$"
        },
        {
          "step": "Compute $d$",
          "explanation": "$d = 1/(500*10^3) = 2 * 10^{-6} \\, \\text{m}$"
        },
        {
          "step": "Substitute values",
          "explanation": "$2*10^{-6} * \\sin\\theta = 1 * 600*10^{-9} \\implies \\sin\\theta = 0.3$"
        },
        {
          "step": "Find angle",
          "explanation": "$\\theta \\approx 17.5^\\circ$"
        }
      ],
      "final_answer": "First-order maximum angle: $\\theta \\approx 17.5^\\circ$"
    },
    {
      "number": 7,
      "problem": "A slit of width 0.2 mm produces a single-slit diffraction pattern using light of wavelength 500 nm. Find the angular width of the central maximum.",
      "image": null,
      "step_by_step": [
        {
          "step": "Single-slit formula",
          "explanation": "$\\theta = \\lambda / a$ for small angle, $a$ is slit width"
        },
        {
          "step": "Substitute values",
          "explanation": "$\\theta = 500*10^{-9}/0.2*10^{-3} = 0.0025 \\, \\text{rad} \\approx 0.143^\\circ$"
        }
      ],
      "final_answer": "Angular width: $\\theta \\approx 0.143^\\circ$"
    },
    {
      "number": 8,
      "problem": "Two coherent light sources interfere with path difference of $300 \\text{ nm}$ for $\\lambda = 600 \\text{ nm}$. Determine the type of interference.",
      "image": null,
      "step_by_step": [
        {
          "step": "Path difference condition",
          "explanation": "Constructive interference: $\\Delta L = m\\lambda$, Destructive: $\\Delta L = (m + 0.5)\\lambda$"
        },
        {
          "step": "Compute ratio",
          "explanation": "$300/600 = 0.5$"
        }
      ],
      "final_answer": "Destructive interference occurs."
    },
