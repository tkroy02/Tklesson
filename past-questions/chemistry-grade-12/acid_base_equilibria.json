{
  "course": "Chemistry Grade 12",
  "topic": "Acid-Base Equilibria",
  "problems": [
    {
      "number": 1,
      "problem": "Define a Brønsted-Lowry acid and base.",
      "image": null,
      "step_by_step": [
        {
          "step": "Acid definition",
          "explanation": "A Brønsted-Lowry acid is a proton (H⁺) donor."
        },
        {
          "step": "Base definition",
          "explanation": "A Brønsted-Lowry base is a proton (H⁺) acceptor."
        }
      ],
      "final_answer": "Acid: proton donor; Base: proton acceptor"
    },
    {
      "number": 2,
      "problem": "Define conjugate acid-base pairs.",
      "image": null,
      "step_by_step": [
        {
          "step": "Definition",
          "explanation": "A conjugate acid-base pair consists of two species that differ by a single proton."
        },
        {
          "step": "Example",
          "explanation": "HCl/Cl⁻, NH3/NH4⁺"
        }
      ],
      "final_answer": "Conjugate pairs: differ by one proton; e.g., HCl/Cl⁻, NH3/NH4⁺"
    },
    {
      "number": 3,
      "problem": "Define the acid dissociation constant (Ka).",
      "image": null,
      "step_by_step": [
        {
          "step": "Definition",
          "explanation": "Ka = [H⁺][A⁻]/[HA], measures strength of an acid in aqueous solution."
        }
      ],
      "final_answer": "Ka = [H⁺][A⁻]/[HA]; higher Ka = stronger acid"
    },
    {
      "number": 4,
      "problem": "Calculate the pH of a 0.01 M HCl solution.",
      "image": null,
      "step_by_step": [
        {
          "step": "Strong acid assumption",
          "explanation": "HCl fully dissociates, [H⁺] = 0.01 M"
        },
        {
          "step": "pH formula",
          "calculation": "pH = -log[H⁺] = -log(0.01) = 2"
        }
      ],
      "final_answer": "pH = 2"
    },
    {
      "number": 5,
      "problem": "Calculate the pH of 0.02 M acetic acid (Ka = 1.8 × 10⁻⁵).",
      "image": null,
      "step_by_step": [
        {
          "step": "Expression for Ka",
          "calculation": "Ka = [H⁺]² / [HA] ≈ x² / 0.02"
        },
        {
          "step": "Solve for x = [H⁺]",
          "calculation": "x² / 0.02 = 1.8 × 10⁻⁵ → x² = 3.6 × 10⁻⁷ → x ≈ 6.0 × 10⁻⁴ M"
        },
        {
          "step": "Calculate pH",
          "calculation": "pH = -log(6.0 × 10⁻⁴) ≈ 3.22"
        }
      ],
      "final_answer": "pH ≈ 3.22"
    },
    {
      "number": 6,
      "problem": "Define the base dissociation constant (Kb) and its relation to Ka.",
      "image": null,
      "step_by_step": [
        {
          "step": "Definition",
          "explanation": "Kb = [BH⁺][OH⁻]/[B], measures strength of a base in water."
        },
        {
          "step": "Relation to Ka",
          "explanation": "Ka × Kb = Kw (1 × 10⁻¹⁴ at 25°C)"
        }
      ],
      "final_answer": "Kb = [BH⁺][OH⁻]/[B]; Ka × Kb = Kw"
    },
    {
      "number": 7,
      "problem": "Calculate the pH of 0.05 M NH3 solution (Kb = 1.8 × 10⁻⁵).",
      "image": null,
      "step_by_step": [
        {
          "step": "Expression for Kb",
          "calculation": "Kb = [OH⁻]² / [NH3] ≈ x² / 0.05"
        },
        {
          "step": "Solve for x = [OH⁻]",
          "calculation": "x² / 0.05 = 1.8 × 10⁻⁵ → x² = 9 × 10⁻⁷ → x ≈ 9.49 × 10⁻⁴ M"
        },
        {
          "step": "Calculate pOH and pH",
          "calculation": "pOH = -log(9.49 × 10⁻⁴) ≈ 3.02 → pH = 14 - 3.02 ≈ 10.98"
        }
      ],
      "final_answer": "pH ≈ 10.98"
    },
    {
      "number": 8,
      "problem": "Explain the buffer solution concept.",
      "image": null,
      "step_by_step": [
        {
          "step": "Definition",
          "explanation": "A buffer solution resists changes in pH upon addition of small amounts of acid or base."
        },
        {
          "step": "Example",
          "explanation": "Mixture of weak acid and its conjugate base (CH3COOH + CH3COONa)."
        }
      ],
      "final_answer": "Buffer: weak acid + conjugate base; resists pH change (e.g., CH3COOH/CH3COONa)."
    },
    {
      "number": 9,
      "problem": "Calculate the pH of a buffer solution containing 0.1 M CH3COOH and 0.05 M CH3COONa (Ka = 1.8 × 10⁻⁵).",
      "image": null,
      "step_by_step": [
        {
          "step": "Henderson-Hasselbalch equation",
          "calculation": "pH = pKa + log([A⁻]/[HA])"
        },
        {
          "step": "Substitute values",
          "calculation": "pKa = -log(1.8 × 10⁻⁵) ≈ 4.74, [A⁻]/[HA] = 0.05/0.1 = 0.5"
        },
        {
          "step": "Calculate pH",
          "calculation": "pH = 4.74 + log(0.5) ≈ 4.74 - 0.301 ≈ 4.44"
        }
      ],
      "final_answer": "pH ≈ 4.44"
    },
    {
      "number": 10,
      "problem": "Explain the difference between strong and weak acids in terms of dissociation.",
      "image": null,
      "step_by_step": [
        {
          "step": "Strong acids",
          "explanation": "Completely dissociate in aqueous solution (e.g., HCl, HNO3)."
        },
        {
          "step": "Weak acids",
          "explanation": "Partially dissociate in aqueous solution (e.g., CH3COOH, HF)."
        }
      ],
      "final_answer": "Strong acids: complete dissociation; Weak acids: partial dissociation"
    }
  ]
}
