        {
          "step": "Calculate power",
          "explanation": "$P = \\frac{W}{t}$",
          "calculation": "$P = \\frac{500}{2} = 250 \\, \\text{W}$"
        }
      ],
      "final_answer": "$P = 250 \\, \\text{W}$"
