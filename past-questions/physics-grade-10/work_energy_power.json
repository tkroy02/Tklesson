    {
      "number": 2,
      "problem": "A 5 kg object is lifted vertically $3\\,\\text{m}$. Find the work done against gravity.",
      "image": null,
      "step_by_step": [
        {
          "step": "Identify values",
          "explanation": "Mass $m = 5\\,\\text{kg}$, height $h = 3\\,\\text{m}$, $g = 9.8\\,\\text{m/s}^2$."
        },
        {
          "step": "Use work formula against gravity",
          "explanation": "$W = F \\cdot d = mg \\cdot h$."
        },
        {
          "step": "Compute work",
          "calculation": "$$ W = 5 \\times 9.8 \\times 3 = 147\\,\\text{J} $$"
        }
      ],
      "final_answer": "The work done is $147\\,\\text{J}$."
    },
    {
      "number": 3,
      "problem": "A 2 kg object moving at $3\\,\\text{m/s}$ has its speed doubled. Find the change in kinetic energy.",
      "image": null,
      "step_by_step": [
        {
          "step": "Compute initial kinetic energy",
          "explanation": "$KE_i = \\frac{1}{2} m v^2$.",
          "calculation": "$$ KE_i = 0.5 \\times 2 \\times 3^2 = 9\\,\\text{J} $$"
        },
        {
          "step": "Compute final kinetic energy",
          "explanation": "Final speed $v_f = 2 \\times 3 = 6\\,\\text{m/s}$, $KE_f = 0.5 m v_f^2$.",
          "calculation": "$$ KE_f = 0.5 \\times 2 \\times 6^2 = 36\\,\\text{J} $$"
        },
        {
          "step": "Change in kinetic energy",
          "explanation": "$\\Delta KE = KE_f - KE_i$.",
          "calculation": "$$ \\Delta KE = 36 - 9 = 27\\,\\text{J} $$"
        }
      ],
      "final_answer": "The change in kinetic energy is $27\\,\\text{J}$."
    },
    {
      "number": 4,
      "problem": "A 3 kg object is dropped from a height of $5\\,\\text{m}$. Find its potential energy at the top.",
      "image": null,
      "step_by_step": [
        {
          "step": "Use potential energy formula",
          "explanation": "$PE = m g h$."
        },
        {
          "step": "Substitute values",
          "calculation": "$$ PE = 3 \\times 9.8 \\times 5 = 147\\,\\text{J} $$"
        }
      ],
      "final_answer": "The potential energy at the top is $147\\,\\text{J}$."
    },
    {
      "number": 5,
      "problem": "A 50 W motor lifts a $20\\,\\text{kg}$ load to a height of $10\\,\\text{m}$. How long does it take?",
      "image": null,
      "step_by_step": [
        {
          "step": "Compute work done",
          "explanation": "$W = m g h$.",
          "calculation": "$$ W = 20 \\times 9.8 \\times 10 = 1960\\,\\text{J} $$"
        },
        {
          "step": "Use power formula",
          "explanation": "Power $P = \\frac{W}{t}$, rearranged to $t = \\frac{W}{P}$."
        },
        {
          "step": "Compute time",
          "calculation": "$$ t = \\frac{1960}{50} = 39.2\\,\\text{s} $$"
        }
      ],
      "final_answer": "It takes $39.2\\,\\text{s}$ to lift the load."
    },
